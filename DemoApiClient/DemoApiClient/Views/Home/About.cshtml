@model TodoItem

@{
    ViewData["Title"] = "About";
}

<h2>@ViewData["Title"]</h2>
<hr/>

@if (Model.Id != 0)
{
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.Id</dd>
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Is Completed</dt>
        <dd>@Model.IsComplete</dd>
    </dl>
}
else
{
    <p>Sucedi&oacute; un error al consultar el item.</p>
}