@model IEnumerable<TodoItem>

@{
    ViewData["Title"] = "Home Page";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Is Complete</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                @Html.ActionLink(item.Name, "About", "", new { id = item.Id })
                                @*@item.Name*@
                            </td>
                            <td>@item.IsComplete</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">
                            No hay registros para mostrar
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<h2>Hotel Beds API Status</h2>
<hr />

<p>@ViewBag.HotelBedsApiStatus</p>

<h2>Hotel Beds API Countries</h2>
<hr />

<p>@ViewBag.HotelBedsCountries</p>